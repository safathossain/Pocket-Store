<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    android:orientation="vertical"
    tools:context=".customerConnection.conversation.ConversationActivity">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:orientation="vertical"
        android:layout_marginTop="55dp"

        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="140dp"
            android:layout_marginBottom="15dp"
            android:elevation="1.5dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_call_purchase_list" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:fontFamily="@font/segoeui"
            android:paddingLeft="40dp"
            android:text="01:53"
            android:textColor="#CC000000"
            android:textSize="20dp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"


        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="110dp"
            android:layout_marginBottom="15dp"
            android:elevation="1.5dp"
            android:paddingTop="10dp"
            android:src="@drawable/person_on_starting_window" />

        <TextView
            android:id="@+id/onCallCustomerNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/segoeui"
            android:paddingLeft="50dp"
            android:text="Username"
            android:textAlignment="center"
            android:textColor="#CC000000"

            android:textSize="20dp" />


    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="135dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="135dp"
        android:orientation="vertical"


        >

        <CheckBox
            android:id="@+id/confirmCB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="confirmClick"
            android:text="Confirm Order"
            android:textAlignment="center" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:orientation="vertical"
        android:paddingLeft="130dp"


        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundshape_bg_for_person_purchaselist"
            android:elevation="1.5dp"
            android:onClick="speakerClick"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/ic_loud_speaker" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="85dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/end_call_background_on_purchaselist"
            android:elevation="1.5dp"
            android:onClick="endCallClick"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/ic_baseline_call_end_24" />


    </RelativeLayout>

</LinearLayout>